<% content_for :title, @tag.name %>
<div class="index row">
  <div class="col-md-9"> 
    <%= render "posts/buttonbar" %>
    <% @posts.each do |post| %>
      <% if post.title != "[Removed]" %>
        <%= render "posts/posts", :post => post %>
      <% end %>
    <% end %>
  </div>
  <%= form_tag(search_tag_page_path, method: "get", name: "filter", id: "filter", class: "form-inline") do %>
    <div class="sideNav col-md-3">
      <%= render "posts/side_navbar" %>
    </div>
  <% end %>
</div>