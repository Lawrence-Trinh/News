<header class="navbar navbar-fixed-top">
  <div class="container">
    <%= link_to "News+", root_path, id: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-center">
        <li><%= link_to "Home", root_path %></li>
        <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown"> News <b class="caret"></b></a>
            <ul class="dropdown-menu">
              <% top_two_tags.each do |tag| %>
                <li><%= link_to tag.name, tag %></li> 
              <% end %>
            </ul> 
          </li>
        <% if logged_in? %>
          <li><%= link_to current_user.name.partition(" ").first, current_user %></li>
        <% end %>
      </ul>
      <ul class="nav navbar-nav navbar-right">
        <% if logged_in? %>
          <%= link_to image_tag(current_user.avatar.url), logout_path, {class: 'navbarUserAvatar', method: :delete} %>
        <% else %>
          <li><%= link_to "Log In", login_path %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>